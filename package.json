{
  "name": "lowlow",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "autoprefixer": "^10.2.4",
    "next": "^10.0.6",
    "postcss": "^8.2.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "showdown": "^1.9.1",
    "tailwindcss": "^2.0.2"
  },
  "scripts": {
    "dev": "next dev -p 3567",
    "build": "next build",
    "start": "next start",
    "types": "tsc --noEmit"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "prettier": {
    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --parser postcss --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/node": "^14.14.24",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/showdown": "^1.9.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
